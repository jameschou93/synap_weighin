%h2
  #{@event.name}
- @event.people.each_with_index do |person, index|
  %table
    %tr
      %td{class: 'ordinal'}= index
      %td{class: "text-left"}=link_to(person.name, person_path(person.id))
      %td{class: "text-left"}=link_to(person.league.name, league_path(person.league.id))
      %td{class: "text-left weight"}= "#{person.up_by(@event)} [%#{(person.up_by(@event).to_f / person.starting_weight * 100).round(2)}]"
  %br
%br
%br
%br
%br
%br
%h3
  %a= link_to('< Back', people_path, class: 'btn btn-default btn-block navbar navbar-fixed-bottom')
